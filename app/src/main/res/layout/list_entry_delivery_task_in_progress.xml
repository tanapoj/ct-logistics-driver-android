<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/grid_small">

    <androidx.cardview.widget.CardView
        android:id="@+id/containerIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_normal"
        android:layout_marginTop="@dimen/grid_small"
        android:layout_marginEnd="@dimen/grid_normal"
        android:layout_marginBottom="@dimen/grid_small"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="@dimen/grid_xsmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnTelIP"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon_xlarge"
                android:background="@color/grayLighter"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:tint="@color/grayDark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vDividerTitleIP"
                app:layout_constraintWidth_percent=".32"
                app:srcCompat="@drawable/ic_baseline_phone_24dp" />

            <ImageView
                android:id="@+id/btnLocationIP"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon_xlarge"
                android:background="@color/grayLighter"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:tint="@color/grayDark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/vDivider2IP"
                app:layout_constraintTop_toBottomOf="@id/vDividerTitleIP"
                app:layout_constraintWidth_percent=".32"
                app:srcCompat="@drawable/ic_baseline_location_24dp" />

            <ImageView
                android:id="@+id/btnCameraIP"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon_xlarge"
                android:background="@color/grayLighter"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:tint="@color/grayDark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/vDivider3IP"
                app:layout_constraintTop_toBottomOf="@id/vDividerTitleIP"
                app:srcCompat="@drawable/ic_baseline_photo_camera_24dp" />

            <TextView
                android:id="@+id/tvTrackingIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_normal"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imgStatusIconIP"
                app:layout_constraintStart_toEndOf="@id/imgStatusIconIP"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1100200452402" />

            <TextView
                android:id="@+id/tvBackOrderIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_normal"
                android:background="@color/deliveryYellow"
                android:paddingStart="@dimen/grid_normal"
                android:paddingEnd="@dimen/grid_normal"
                android:textColor="@color/black"
                android:textSize="@dimen/text_xsmall"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/tvTrackingIP"
                app:layout_constraintStart_toEndOf="@+id/tvTrackingIP"
                app:layout_constraintTop_toTopOf="@+id/tvTrackingIP"
                tools:text="ค้างส่ง 2 วัน" />

            <TextView
                android:id="@+id/tvServiceIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_xsmall"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/tvTrackingIP"
                app:layout_constraintTop_toBottomOf="@+id/tvTrackingIP"
                tools:text="Normal/DOC40" />

            <TextView
                android:id="@+id/tvDateIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_normal"
                android:layout_marginEnd="@dimen/grid_normal"
                android:textColor="@color/grayLight"
                android:textSize="@dimen/text_xsmall"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/tvServiceIP"
                app:layout_constraintStart_toEndOf="@+id/tvServiceIP"
                app:layout_constraintTop_toTopOf="@+id/tvServiceIP"
                tools:text="(2017-09-17 16:12)" />

            <TextView
                android:id="@+id/tvCodIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_normal"
                android:layout_marginTop="@dimen/grid_normal"
                android:layout_marginEnd="@dimen/grid_medium"
                android:layout_marginBottom="@dimen/grid_normal"
                android:textColor="@color/deliveryRed"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvTrackingIP"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvTrackingIP"
                tools:text="243" />

            <TextView
                android:id="@+id/tvCodTitleIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/grid_medium"
                android:text="COD (THB)"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_xsmall"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/tvServiceIP"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvServiceIP" />

            <TextView
                android:id="@+id/tvRecipientIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_medium"
                android:layout_marginTop="@dimen/grid_large"
                android:layout_marginEnd="@dimen/grid_medium"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vDividerTitle2IP"
                app:layout_constraintWidth_percent=".8"
                tools:text="Recipient : Mrs. Pilin Kusol" />

            <TextView
                android:id="@+id/tvTelephoneIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_medium"
                android:layout_marginTop="@dimen/grid_normal"
                android:textColor="@color/grayDarker"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRecipientIP"
                app:layout_constraintWidth_percent=".8"
                tools:text="Tel: 012345679" />

            <TextView
                android:id="@+id/tvAddressIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_medium"
                android:layout_marginTop="@dimen/grid_normal"
                android:layout_marginEnd="@dimen/grid_medium"
                android:textColor="@color/grayDarker"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTelephoneIP"
                app:layout_constraintWidth_percent=".8"
                tools:text="Address:\ndgdgdfg" />

            <View
                android:id="@+id/vDivider4IP"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider"
                android:layout_marginTop="@dimen/grid_normal"
                android:background="@color/grayLighter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAddressIP" />

            <TextView
                android:id="@+id/tvRemarkIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_medium"
                android:layout_marginTop="@dimen/grid_normal"
                android:layout_marginEnd="@dimen/grid_medium"
                android:textColor="@color/grayDarker"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vDivider4IP"
                app:layout_constraintWidth_percent=".8"
                tools:text="Service type : Normal 2/ chilled 0 / Frozen 3" />

            <View
                android:id="@+id/vDividerTitle2IP"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider"
                android:layout_marginTop="@dimen/grid_normal"
                android:background="@color/grayLight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvServiceIP" />

            <View
                android:id="@+id/vDivider1IP"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider"
                android:layout_marginStart="@dimen/grid_normal"
                android:layout_marginEnd="@dimen/grid_medium"
                android:background="@color/grayLighter"
                app:layout_constraintBottom_toBottomOf="@id/tvRecipientIP"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvRecipientIP"
                app:layout_constraintTop_toTopOf="@id/tvRecipientIP" />

            <View
                android:id="@+id/vDividerTitleIP"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider"
                android:layout_marginTop="@dimen/grid_medium"
                android:background="@color/grayLight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRemarkIP" />

            <!--TODO : Hiding not implemented-->
            <View
                android:id="@+id/vDivider2IP"
                android:layout_width="@dimen/divider"
                android:layout_height="0dp"
                android:background="@color/grayLight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnTelIP"
                app:layout_constraintTop_toBottomOf="@id/vDividerTitleIP" />

            <!--TODO : Hiding not implemented-->
            <View
                android:id="@+id/vDivider3IP"
                android:layout_width="@dimen/divider"
                android:layout_height="0dp"
                android:background="@color/grayLight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnLocationIP"
                app:layout_constraintTop_toBottomOf="@id/vDividerTitleIP" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgStatusIconIP"
                android:layout_width="@dimen/icon_xlarge"
                android:layout_height="@dimen/icon_xlarge"
                android:layout_margin="@dimen/grid_normal"
                android:tint="@color/deliveryOrange"
                app:layout_constraintBottom_toBottomOf="@+id/tvServiceIP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvTrackingIP"
                app:srcCompat="@drawable/ic_baseline_unarchive_24dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>