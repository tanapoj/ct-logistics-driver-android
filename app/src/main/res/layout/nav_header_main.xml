<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="@dimen/icon_avatar_large"
            android:layout_height="@dimen/icon_avatar_large"
            android:layout_marginBottom="@dimen/grid_large"
            android:layout_marginStart="@dimen/grid_large"
            android:layout_marginTop="@dimen/grid_xxxlarge"
            android:src="@drawable/avatar_test"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/grid_large"/>

    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_large"
            android:layout_marginTop="@dimen/grid_large"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tvSubTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgIcon"
            tools:text="@string/this_is_title"
            android:layout_marginLeft="@dimen/grid_large"/>

    <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/grid_large"
            android:layout_marginStart="@dimen/grid_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/this_is_subtitle"
            android:layout_marginLeft="@dimen/grid_large"/>

    <View
            android:background="@color/grayLight"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"/>

</androidx.constraintlayout.widget.ConstraintLayout>